<div class="nav-bar">
    <%= link_to  do %>
      <%= image_tag 'logo.png', height: "60px" %>
    <% end %>
  <% if !user_signed_in? %>
    <div class="nav-bar-out">
      <div>
        <%= link_to "Login", new_user_session_path, class: "nav-link nav-item" %>
      </div>
      <div >
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link nav-item" %>
      </div>
    </div>
  <% else %>
    <div class="nav-bar-in">
      <% if user_signed_in? %>
        <div >
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link nav-item" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
