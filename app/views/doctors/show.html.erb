<div class="container">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-tab">
      <a class="nav-link active text-center" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="general" aria-selected="true"><i class="fas fa-user-friends"></i> <div>General Info</div></a>
    </li>
    <li class="nav-tab">
      <a class="nav-link text-center" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="consults" aria-selected="false"><i class="fas fa-user-md"></i><div>Consultation Log</div></a>
    </li>
    <li class="nav-tab">
      <a class="nav-link text-center" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="prescriptions" aria-selected="false"><i class="fas fa-prescription-bottle-alt"></i><div>Prescription Log</div></a>
    </li>
  </ul>
  <div class="tab-content generic-tab" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="general-tab">
      <div class="generic-table" >

        <div class="card border-dark mb-3">
          <div class="card-header">Personal Details</div>
          <div class="card-body text-dark">
            <h2 class="card-title">Dr. <%= @doctor.user.first_name %> <%= @doctor.user.last_name %></h2>
            <p class="card-text">Age:  <b><%= @age %></b></p>
            <p class="card-text">Nationality:  <b><%= @doctor.user.nationality %></b></p>
          </div>
        </div>

        <div class="card border-dark mb-3">
          <div class="card-header">Medical Details</div>
          <div class="card-body text-dark">
            <p class="card-title">Medical License Number:  <b><%= @doctor.medical_licence_number %></b> </p>
            <p class="card-title">Residential Clinic:  <b><%= @doctor.clinic_of_practice%></b></p>
            <p class="card-title">Clinic Address:  <b><%= @doctor.address_of_clinic %></b></p>
            <% if @consultations.length >= 1 %>
              <p class="card-title">Last Consultation Date:  <b><%= @consultations.last.created_at.strftime("%B %e, %Y, %I:%m%P") %></b></p>
              <p class="card-title">Patient from last consultation:  <b><%= @consultations.last.patient.user.first_name %> <%= @consultations.last.patient.user.last_name %></b></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="consults-tab">

      <% if @consultations.length >= 1 %>
        <div class="d-flex justify-content-around m-4">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Total Number Of Consultations Done</h5>
              <p class="card-text"> <%= @consultations.length %> </p>
            </div>
          </div>

          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Most Recently Consulted Patient</h5>
              <p class="card-text"><%= @consultations.last.patient.user.first_name %> <%= @consultations.last.patient.user.last_name %></p>
            </div>
          </div>
        </div>




        <table class="table table-striped table-dark table-hover">
          <thead>
            <tr>
              <th scope="col">Date Of Consultation</th>
              <th scope="col">Patient</th>
              <th scope="col">Number Of Prescriptions</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @consultations.each do |consultation| %>
            <tr>
              <th scope="row"><%= consultation.created_at.strftime("%B %e, %Y, %I:%m%P") %></th>
              <td>Dr. <%= consultation.patient.user.first_name + " " + consultation.patient.user.last_name  %></td>
              <td><%= consultation.prescriptions.length %></td>
              <td><%= link_to "View Consultation", consultation_path(consultation), class:"btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">No Consultations Have Been Carried Out Yet. Get Started!</h5>
            </div>
        </div>
      <% end %>
    </div>


    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="prescriptions-tab">

        <% if @prescriptions.length == 0 %>
          <div class="generic-table">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Zero Prescriptions Done</h5>
              </div>
            </div>
          </div>
        <% else %>

          <div class="d-flex justify-content-around m-4">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Total Number Of Prescriptions Done</h5>
                <p class="card-text"> <%= @prescriptions.length %> </p>
              </div>
            </div>

            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Most Recently Prescriped Medicine</h5>
                <p class="card-text">You project <%= @prescriptions.last.medicine.name %>, <%= @prescriptions.last.servings_per_day.to_i %> times a day for <%= @prescriptions.last.number_of_days.to_i %> days </p>
              </div>
            </div>
          </div>
        <% end %>
        <div class="generic-table">
          <table class="table table-striped table-dark table-hover">
              <thead>
                <tr>
                  <th scope="col">Prescribed On</th>
                  <th scope="col">Medicine</th>
                  <th scope="col">Dose</th>
                  <th scope="col">Serving Type</th>
                  <th scope="col">Amount Per Serving</th>
                  <th scope="col">Servings Per Day</th>
                  <th scope="col">Days To Consume</th>
                  <th scope="col">Directions of Consumption</th>
                </tr>
              </thead>
                <tbody>
                  <% @prescriptions.each do |prescription| %>
                  <tr>
                    <th class="text-nowrap" scope="row"><%= prescription.created_at.strftime("%B %e, %Y, %I:%m%P") %></th>
                    <td><%= prescription.medicine.name  %></td>
                    <td><%= prescription.medicine.strength_of_medicine  %></td>
                    <td></td>
                    <td><%= prescription.amount_per_serving.to_i  %></td>
                    <td><%= prescription.servings_per_day.to_i  %></td>
                    <td><%= prescription.number_of_days.to_i  %></td>
                    <td><%= prescription.comment.capitalize  %></td>
                  </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
    </div>
  </div>

</div>

